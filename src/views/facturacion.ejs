<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facturación Electrónica</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="stylesheets/header.css">
    <link rel="stylesheet" href="stylesheets/forms.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="container main-container">
        <div class="form-section active">
            <h2 class="text-center mb-4">Creación Facturas Multi TRM</h2>
            <form role="form" method="post" class="compact-form">
                <!-- Primera fila con el campo Resolución -->
                <div class="form-row mb-3">
                    <div class="col-md-12">
                        <div class="d-flex align-items-center">
                            <label for="resolucion" class="form-label">Resolución</label>
                            <select name="resolucion" id="resolucion" class="form-select" style="width: 150px;">
                                <% resoluciones.forEach(resolucion => { %>
                                    <option value="<%= resolucion.Centro %>">
                                        <%= resolucion.Expr1 %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                </div>
        
                <!-- Agrupación de campos en fila -->
                <div class="form-row mb-3">
                    <div class="col-md-2">
                        <div class="d-flex align-items-center">
                            <label for="factura_no" class="form-label">Factura No.</label>
                            <input type="text" name="factura_no" id="factura_no" class="form-control" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex align-items-center">
                            <label for="fecha" class="form-label">Fecha</label>
                            <input type="date" name="fecha" id="fecha" class="form-control" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex align-items-center">
                            <label for="días" class="form-label">Días</label>
                            <input type="text" name="días" id="días" class="form-control" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="d-flex align-items-center">
                            <label for="trm" class="form-label">TRM</label>
                            <input type="text" name="trm" id="trm" class="form-control" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex align-items-center">
                            <label>&nbsp;</label>
                            <button type="button" id="cargar" class="btn btn-primary w-100">Cargar</button>
                        </div>
                    </div>
                </div>
        
                <!-- Agrupación de más campos -->
                <div class="form-row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="cliente" class="form-label">Cliente*</label>
                            <div class="d-flex">
                                <input type="text" name="cliente" id="cliente" class="form-control" style="width: 70%;">
                                <select name="cliente2" id="cliente2" class="form-select ms-2" style="width: 30%;">
                                    <option value="">Seleccione una opción</option>
                                    <!-- Opciones aquí -->
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="forma-pago" class="form-label">Forma de Pago*</label>
                            <select name="forma-pago" id="forma-pago" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                </div>
        
                <div class="form-row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="moneda" class="form-label">Moneda*</label>
                            <select name="moneda" id="moneda" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="moneda-dian" class="form-label">Moneda Dian*</label>
                            <select name="moneda-dian" id="moneda-dian" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                </div>
        
                <div class="form-row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="centro_costos" class="form-label">Centro costos</label>
                            <select name="centro_costos" id="centro_costos" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="medio_pago" class="form-label">Medio de pago*</label>
                            <select name="medio_pago" id="medio_pago" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                </div>
        
                <div class="form-row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="tipo_factura" class="form-label">Tipo Factura*</label>
                            <select name="tipo_factura" id="tipo_factura" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="doc_cargar" class="form-label">Doc. a cargar</label>
                            <select name="doc_cargar" id="doc_cargar" class="form-select">
                                <option value="">Seleccione una opción</option>
                                <!-- Opciones aquí -->
                            </select>
                        </div>
                    </div>
                </div>
        
                <div class="form-row mb-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label for="NoDoc_cargar" class="form-label">No.</label>
                            <input type="text" name="NoDoc_cargar" id="NoDoc_cargar" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <label>&nbsp;</label>
                            <button type="button" id="cargar2" class="btn btn-primary w-100">Cargar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
                       
    </main>
    <!-- Incluir JavaScript de Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
